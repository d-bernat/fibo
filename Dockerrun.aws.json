{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "fibo-client",
            "image": "dbernat/fibo-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "fibo-server",
            "image": "dbernat/fibo-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "fibo-worker",
            "image": "dbernat/fibo-worker",
            "essential": false
        },
        {
            "name": "fibo-nginx",
            "image": "dbernat/fibo-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["fibo-client", "fibo-server"]
        }
    ]
}